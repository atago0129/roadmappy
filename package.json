{
  "name": "roadmappy",
  "version": "1.1.1",
  "description": "roadmap manager with d3.",
  "main": "src/index.js",
  "scripts": {
    "build": "webpack",
    "format": "prettier --write 'src/**/*.js'",
    "debug": "webpack-dev-server --progress --colors --hot --open",
    "precommit": "lint-staged",
    "postcommit": "git reset"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": true
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "css-loader": "^0.28.11",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "prettier": "^1.12.1",
    "style-loader": "^0.18.2",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.2"
  },
  "dependencies": {
    "@atago0129/d3-v4-contextmenu": "^1.0.1",
    "d3": "^4.13.0",
    "get-form-data": "^1.2.5",
    "i18next": "^10.6.0",
    "lodash.template": "^4.4.0",
    "rgb-hex": "^2.1.0"
  }
}
